<div class="content">
  <div class="content__top">
    <div class = "content__top__name">
      <%= bitch.user.name %>
    </div>
    <% if bitch.user.id == current_user.id %>
      <div class="content__top__delete-btn">
        <%= link_to bitch_path(bitch), class: "delete", method: :delete do %>
          <%= image_tag "trush.png", class: "delete-btn", size: "15x15"%>
          削除
        <% end %>
      </div>
    <% end %>
  </div>
  <div class = "content__comment">
  <%= link_to bitch_path(bitch) do %>
    <%= bitch.comment %>
  <% end %>
  </div>
  <div>
    共感数：<%= @empathy_count %>
  </div>
</div>