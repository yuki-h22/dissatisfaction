<!DOCTYPE html>
<html>
  <head>
    <title>Dissatisfaction</title>
    <meta name="description", content="I want to share my worries.Or share your worries.">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="body">
    <header class="header">
      <div class="header__bar">
        <h2 class="header__bar__title">
        <%= link_to root_path, class:"header__bar__title__text border-none" do %>
          SYW
        <% end %>
        </h2>
        <div class="wrap">
          <div class="wrap__in">
        <% if user_signed_in? %>
          <div class="header__bar__user grid-p">
            <div class="header__bar__user__name grid-c">
              <%= current_user.name%>
            </div>
            <ul class="header__bar__user__info">
              <%= link_to new_bitch_path, class: "top-btn border-none" do %>
              <li class="header__bar__user__info__list grid-c">
                投稿する
              </li>
              <% end %>
              <%= link_to destroy_user_session_path, method: :delete, class: "top-btn border-none" do %>
              <li class="header__bar__user__info__list grid-c">
                ログアウト
              </li>
              <% end %>
            </ul>
          </div>
        <% else %>
          <div class="header__guest grid-p">
            <ul>
              <li class="header__guest__list grid-c">
                <%= link_to "ログイン", new_user_session_path, class: "top_btn border-none" %>
              </li>
              <li class="header__guest__list grid-c">
                <%= link_to "新規登録", new_user_registration_path, class: "top_btn border-none" %>
              <li>
          </div>
        <% end %>
        </div>
      </div>
    </header>
    <%= yield %>
    <footer class="footer">
      <div>
        <div class="descriotion">
          <div class="description__title border-none">
            <a>このアプリについて</a>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
